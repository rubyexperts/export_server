<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
   "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title><%= @page_title %></title>
    
    
    <%= stylesheet_link_tag('public', 'expense', :media => 'screen') %>
    <%= stylesheet_link_tag('print', :media => 'print') %>
    <%= javascript_include_tag :defaults, :cache => true %>
  </head>
  <body>
    <div id="header">
      <table>
      	<tr>
      	<td><%= image_tag("talgo.jpg", :size => '70x33')%>	 </td>
        <td><h3>Expense Reporting System</h3> </td>
        </tr>
      </table>
     </div>

     <div id="menulinks">
       <table>
      	<tr>
      	<td><%= link_to('Home', :controller => "admins",  :action => 'menu') %> </td>
      	<td></td>
      	<% if session[:user_id]%>
      	    <td><%= link_to('Change Password', :controller => "users", :action => 'edit' , :id => @current_user.id) %> </td>
            <td align="right">
        	<b>Logged in as</b>
      	         <%= session[:user_name] %>
      	    <%= link_to('Logout', :controller => "admins",  :action => 'logout') %>
      	<% else %>	
      	    <%= link_to('Please Sign in now ', :action => 'login') %>
      	<% end %>
      	</td>
      	</tr>

      	</table>
      </div>	
    
    <div id="main">
      <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <div id="content">
      <h3>  <%= @page_title %> </h3>
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; Copyright Talgo Inc. USA 2010. All rights reserved.</p>
    </div>
  </body>
</html>
